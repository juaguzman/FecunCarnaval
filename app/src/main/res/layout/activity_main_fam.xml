<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="example.juancarlos.com.fecuncarnaval.MainFamActivity"
    android:background="@drawable/pgn5">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="84dp"
            android:id="@+id/imageButton"
            android:layout_row="0"
            android:layout_column="0"
            android:contentDescription="@string/btn28"
            android:background="@drawable/d28"
            android:layout_marginLeft="2dp" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="84dp"
            android:id="@+id/imageButton4"
            android:layout_row="0"
            android:layout_column="2"
            android:contentDescription="@string/btn28"
            android:background="@drawable/d29"
            android:layout_marginRight="5dp" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="84dp"
            android:id="@+id/imageButton6"
            android:layout_row="1"
            android:layout_column="0"
            android:contentDescription="@string/btn28"
            android:background="@drawable/d30"
            android:layout_marginLeft="2dp" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="84dp"
            android:id="@+id/imageButton5"
            android:layout_row="1"
            android:layout_column="2"
            android:contentDescription="@string/btn28"
            android:background="@drawable/d31"
            android:layout_marginRight="5dp" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="84dp"
            android:id="@+id/imageButton7"
            android:layout_row="2"
            android:layout_column="0"
            android:contentDescription="@string/btn28"
            android:background="@drawable/d2"
            android:layout_marginLeft="2dp" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="84dp"
            android:id="@+id/imageButton8"
            android:layout_row="2"
            android:layout_column="2"
            android:contentDescription="@string/btn28"
            android:background="@drawable/d3"
            android:layout_marginRight="5dp" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="84dp"
            android:id="@+id/imageButton9"
            android:layout_row="3"
            android:layout_column="0"
            android:contentDescription="@string/btn28"
            android:background="@drawable/d4"
            android:layout_marginLeft="2dp" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="84dp"
            android:id="@+id/imageButton10"
            android:layout_row="3"
            android:layout_column="2"
            android:contentDescription="@string/btn28"
            android:background="@drawable/d5"
            android:layout_marginRight="5dp" />

    </GridLayout>

    <ImageView
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:background="@drawable/d6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="380dp"
        android:layout_marginBottom="20dp" />
</RelativeLayout>
